Проблема: Отправка данных документа в CRM-систему при проведении.
_________________________________________________________________

// В модуле документа после проведения:
&НаСервере
Процедура ПослеЗаписи(Успешно)
    Если Не Успешно Тогда Возврат; КонецЕсли;
    
    HTTPСоединение = Новый HTTPСоединение("api.example.com");
    HTTPЗапрос = Новый HTTPЗапрос();
    HTTPЗапрос.АдресРесурса = "/create_order";
    HTTPЗапрос.УстановитьТелоИзСтроки(
        "{""client_id"":""" + Объект.Контрагент + 
        """, ""sum"":" + Объект.СуммаДокумента + "}"
    );
    
    Попытка
        Ответ = HTTPСоединение.ОтправитьДляОбработки(HTTPЗапрос);
        Если Ответ.КодСостояния = 200 Тогда
            Сообщить("Данные отправлены в CRM");
        Иначе
            Сообщить("Ошибка: " + Ответ.КодСостояния);
        КонецЕсли;
    Исключение
        Сообщить("Ошибка соединения: " + ОписаниеОшибки());
    КонецПопытки;
КонецПроцедуры
