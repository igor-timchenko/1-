Проблема: Выгрузить данные справочника "Номенклатура" во внешнюю систему через OData.
_____________________________________________________________________________________

// В обработке выгрузки
&НаСервере
Процедура ВыгрузитьНоменклатуру()
    Соединение = Новый HTTPСоединение("сервер.example.com", 80, "", "");
    Путь = "/odata/standard.odata/Catalog_Номенклатура";
    
    Для Каждого Номенклатура Из Справочники.Номенклатура.Выбрать() Цикл
        Тело = Новый Соответствие;
        Тело["Description"] = Номенклатура.Наименование;
        Тело["Article"] = Номенклатура.Артикул;
        
        JSON = ЗаписатьJSON(Тело);
        
        HTTPЗапрос = Новый HTTPЗапрос(Путь);
        HTTPЗапрос.УстановитьТелоИзСтроки(JSON, "application/json");
        
        Ответ = Соединение.ОтправитьДляОбработки(HTTPЗапрос, "POST");
        Если Ответ.КодСостояния <> 201 Тогда
            Сообщить("Ошибка выгрузки: " + Ответ.ПолучитьТелоКакСтроку());
        КонецЕсли;
    КонецЦикла;
КонецПроцедуры
